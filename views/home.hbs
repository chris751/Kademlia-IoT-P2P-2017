<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Home</title>
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
</head>

<body>

  <style>


    body {
      margin-left: 1%;
      margin-right: 3%;
      font-family: Arial, Helvetica, sans-serif;
    }

    table,
    td,
    th {
      border: 1px solid #9E9E9E;
      text-align: left;
    }

    table {
      margin-top: 2%;
      border-collapse: collapse;
      width: 100%;
    }

    th,
    td {
      text-align: left;
      padding: 7px;
    }

    th {
      background-color: #2196F3;
      color: white;
    }

    .floating-box {
      float: left;
      width: 31%;
      height: 20%;
      margin: 1%;
    }

    .float_left {
      width: 20%;
      height: 100%;
      float: left;
      border-right: 2px solid black;
      padding-right: 1%;
    }

    .wrap-box {
      float: right;
      width: 75%;
    }

    input[type=text],
    select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    input[type=submit] {
      width: 100%;
      background-color: #F44336;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    input[type=submit]:hover {
      background-color: #D32F2F;
    }

    .form {
      border-radius: 5px;
    }

    .info {
      border-bottom: 2px solid black;
      margin-bottom: 25px;
    }
  </style>

  <div class="float_left">
    <div class="info">
      <h1>Kademlia</h1>
      <h3>Node ID</h3>
      <p>{{node_id}}</p>
      <h3>Port Number</h3>
      <p>{{node_port_number}}</p>
      <h3>Node URI</h3>
      <p>{{my_ip_address}}</p>



    </div>

    <div class="form">
      <form id="registerform">
        <input type="text" name="sendToPort" placeholder="Enter port number to ping">
        <input type="text" name="remoteId" value="{{node_id}}">
        <input type="text" name="remotePort" value="{{node_port_number}}">
        <input type="text" name="remoteIp" value="{{my_ip_address}}">
        <input type="submit" onclick="update()" value="PING">
      </form>
    </div>
    <p id="event"></p>
    <p id="event1"></p>
    <p id="event2"></p>
    <p id="event3"></p>
  </div>


  <script>
    var remotePort;
    function update() {
      remotePort = document.forms['registerform'].elements['sendToPort'].value;
      console.log(remotePort);
    }
    $(function() {
      $("#registerform").on("submit", function(e) {
        e.preventDefault();
        $.ajax({
          url: 'http://localhost:' + remotePort + '/api/node/ping',
          type: 'POST',
          data: $(this).serialize(),
          complete: function() {
            //called when complete
            console.log('process complete');
          },
          success: function(data) {
            console.log(data);
            console.log('process sucess');
            document.getElementById("event").innerHTML = data.event;
            document.getElementById("event1").innerHTML = data.remoteId;
            document.getElementById("event2").innerHTML = data.remotePort;
            document.getElementById("event3").innerHTML = data.remoteIp;
          },

          error: function() {
            console.log('process error');
          },
        });
      });
    });
  </script>

  <!-- start of table -->
  <div class="wrap-box">
    <div class="floating-box">
      <h2>Bucket 0</h2>
      <table>
        {{> table}}
        {{#list "0"}}{{/list}}
      </table>
    </div>

    <div class="floating-box">
      <h2>Bucket 1</h2>
