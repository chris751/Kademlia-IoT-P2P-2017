        {{> table}}
        {{#list "2"}}{{/list}}
      </table>
    </div>

    <div class="floating-box">
      <h2>Bucket 3</h2>
      <table>
        {{> table}}
        {{#list "3"}}{{/list}}
      </table>
    </div>

    <div class="floating-box">
      <h2>Bucket 4</h2>
      <table>
        {{> table}}
        {{#list "4"}}{{/list}}
      </table>
    </div>

    <div class="floating-box">
      <h2>Bucket 5</h2>
      <table>
        {{> table}}
        {{#list "5"}}{{/list}}
      </table>
    </div>

    <div class="floating-box">
      <h2>Bucket 6</h2>
      <table>
        {{> table}}
